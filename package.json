{
  "name": "rune-ordinals-toolbox",
  "version": "2.0.0",
  "description": "Bitcoin UTXO Management and Rune/Ordinals Toolbox with bitcoinjs-lib",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "utxo:merge": "tsx src/scripts/UTXO_merge.ts",
    "utxo:send": "tsx src/scripts/UTXO_send.ts",
    "utxo:split": "tsx src/scripts/UTXO_split.ts",
    "rune:etch": "tsx src/scripts/RUNE_etching.ts",
    "rune:mint": "tsx src/scripts/RUNE_minting.ts",
    "rune:transfer": "tsx src/scripts/RUNE_transfer.ts",
    "ordinal:inscribe": "tsx src/scripts/Parent_Inscription.ts",
    "ordinal:child": "tsx src/scripts/Text_Child_Inscription.ts",
    "ordinal:reinscribe": "tsx src/scripts/Reinscription.ts"
  },
  "keywords": [
    "bitcoin",
    "utxo",
    "rune",
    "ordinals",
    "taproot",
    "bitcoinjs-lib",
    "typescript"
  ],
  "author": "Bitcoin Developer",
  "license": "MIT",
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "@ordjs/runestone": "^1.6.0",
    "axios": "^1.6.5",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "cbor": "^9.0.2",
    "dotenv": "^16.3.2",
    "ecpair": "^2.1.0",
    "runelib": "^1.0.6",
    "runestone-js": "^0.3.0",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitmapers/rune-ordinals-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/bitmapers/rune-ordinals-toolbox/issues"
  },
  "homepage": "https://github.com/bitmapers/rune-ordinals-toolbox#readme"
